{
  "name": "@pinkpixel/llmstxt-generator",
  "version": "1.0.0",
  "description": "MCP server that scrapes documentation websites and generates llmstxt files using x-crawl",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rmdir /s /q dist 2>nul || echo dist cleaned",
    "prebuild": "npm run clean",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "scraping",
    "llmstxt",
    "x-crawl",
    "ai"
  ],
  "author": "Pink Pixel (https://pinkpixel.dev)",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.2",
    "cheerio": "1.1.2",
    "node-html-markdown": "^1.3.0",
    "turndown": "^7.2.0",
    "x-crawl": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "24.2.1",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "eslint": "9.33.0",
    "tsx": "4.20.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
